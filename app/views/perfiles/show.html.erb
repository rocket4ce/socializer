<h1>Perfil de Usuario <span><strong><%= @user.name %></strong></span></h1>

<%= simple_form_for(@perfil) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :tabajo %>
    <%= f.input :ciudad %>
    <%= f.input :descripcion %>
    <%= f.input :telefono %>
    <%= f.input :celular %>
    <%= f.input :face %>
    <%= f.input :tw %>
    <%= f.input :g %>
    <%= f.input :you %>
    <%= f.input :pin %>
    <%= f.input :link %>
    <%= f.input :flr %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>





<%= link_to 'Back', perfiles_path %>
