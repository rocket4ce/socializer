<h1>Listing portafolios</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th>User</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @portafolios.each do |portafolio| %>
      <tr>
        <td><%= portafolio.titulo %></td>
        <td><%= portafolio.descripcion %></td>
        <td><%= link_to portafolio.user.name, controller: "users", action: "show", id: portafolio.user.id %></td>
        <td><%= link_to 'Show', user_portafolio_path(portafolio.user_id,portafolio) %></td>
        <td><%= link_to('Edit', edit_user_portafolio_path(portafolio.user_id,portafolio)) if current_user.id == portafolio.user_id  %></td>
        <td><%= link_to('Destroy', user_portafolio_path(portafolio.user_id,portafolio), method: :delete, data: { confirm: 'Â¿Estas seguro que quieres eliminar este Proyecto?' }) if current_user.id == portafolio.user_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
