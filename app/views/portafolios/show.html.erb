<p id="notice"><%= notice %></p>
<p>
  <strong>Titulo:</strong>
  <%= @portafolio.titulo %>
</p>

<p>
  <strong>Descripcion:</strong>
  <%= @portafolio.descripcion %>
</p>

<p>
  <strong>User:</strong>
  <%= link_to @portafolio.user.name, controller: "users", action: "show", id: @portafolio.user.id %>
</p>
<p>
	<%= @portafolio.impressionist_count(:filter=>:session_hash) %>
</p>

<%= simple_form_for current_user([@portafolio, @coment]) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :comment %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<% if current_user === @user %>
	<%= link_to 'Edit', edit_portafolio_path(@portafolio) %> |
<% end %>
<%= link_to 'Portafolio ', user_path(@portafolio.user_id) %>